      /************************************************************************
       * SCROLL STYLE                                                          *
       ************************************************************************/
      .jwscroll {
        position: relative;
        box-sizing: border-box;
        width: 200px;
        overflow: hidden;
      }
      .jwscroll-inner {
        height: 200px;
        overflow-y: scroll;
        overflow-x: hidden;
      }

      .jwscroll .sc {
        position: absolute;
        box-sizing: border-box;
        top: 0;
        bottom: 0;
        right: 0;
        width: 7px;
      }
      .jwscroll .ps {
        position: absolute;
        border-radius: 5px;
        background-color: green;
        left: 0;
        right: 0;
        opacity: 0;
        cursor: default;
        transition: opacity 800ms ease;
      }

      .jwscroll .ps.show {
        opacity: 1;
        transition: opacity 300ms ease;
      }

      .jwscroll-inner::-webkit-scrollbar {
        width: 0;
        height: 0;
      }
		</style>
