    <script>

      var util = { 
        addClass: function (target, addClass) {
          var className = target.className;
          if (!new RegExp(addClass, 'g').exec(className)) {
            className += " "+addClass;
            target.className = className;
          }
        },
        removeClass: function (target, removeClass) {
          var className = target.className;
          if (new RegExp(removeClass, 'g').exec(className)) {
            var regex = new RegExp(' '+removeClass, 'g');
            className = className.replace(regex, '');
            target.className = className;
          }
        }
      }


      function hiddenScroll() {
        var jwscrollWrap = document.querySelector(".jwscroll-wrap");
        var jwscroll = document.querySelector(".jwscroll");
        var scrollWeight = jwscroll.offsetWidth - jwscroll.clientWidth;
        var changeWidth = jwscroll.clientWidth - scrollWeight;
        jwscroll.style.width = jwscroll.clientWidth+"px";
        jwscrollWrap.style.width = changeWidth+"px";
      }

      function addScroll() {

        var scrollWrap = document.querySelector(".jwscroll-wrap");
        var node = document.createElement("div");
        var ps = document.createElement("div");
        ps.className = "ps";
        node.className = "sc";

        node.appendChild(ps);
        scrollWrap.appendChild(node);
      }

      function makeScrollPosition() {
        var jwscroll = document.querySelector(".jwscroll");
        var ps = document.querySelector(".jwscroll-wrap .ps");
        var scrollHeight = jwscroll.scrollHeight;
        var clientHeight = jwscroll.clientHeight;
        var posHeight = parseInt(clientHeight * (clientHeight/scrollHeight));
        ps.style.height = posHeight+"px";
      }
      function setScrollTop() {
        var jwscroll = document.querySelector(".jwscroll");
        var ps = document.querySelector(".jwscroll-wrap .ps");
        var scrollHeight = jwscroll.scrollHeight;
        var clientHeight = jwscroll.clientHeight;
        var rating = clientHeight/scrollHeight;
        var scrollTop = jwscroll.scrollTop * rating;
        ps.style.top = scrollTop+"px";
      }

      hiddenScroll();
      addScroll();
      makeScrollPosition();


      var scrollTime = null;
      document.querySelector(".jwscroll").addEventListener('scroll', function() {

        setScrollTop();

        var ps = document.querySelector(".jwscroll-wrap .ps");
        util.addClass(ps, 'show');
        clearTimeout(scrollTime);
        scrollTime = setTimeout(function() {
          util.removeClass(ps, 'show');
        },1000);
      });
      document.querySelector(".jwscroll").addEventListener('DOMSubtreeModified', function() {
        makeScrollPosition();
        setScrollTop();
      });

      window.addEventListener('resize',function() {
        var jwscrollWrap = document.querySelector(".jwscroll-wrap");
        var jwscroll = document.querySelector(".jwscroll");
        jwscroll.removeAttribute("style");
        jwscrollWrap.removeAttribute("style");
        hiddenScroll();
      });


      document.getElementById("addContent").addEventListener('click', function() {
        var jwscroll = document.querySelector(".jwscroll");
        var node1 = document.createElement("div");
        var node2= document.createElement("div");
        node1.setAttribute('style', "width: 100%;height: 30px;background-color: #ebebeb;");
        node2.setAttribute('style', "width: 100%;height: 30px;background-color: #fff;");
        jwscroll.appendChild(node1);
        jwscroll.appendChild(node2);
      });

    </script>
